{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noLib": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "types": ["vite/client", "jest"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}